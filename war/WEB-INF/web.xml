<?xml version="1.0" encoding="utf-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
xmlns="http://java.sun.com/xml/ns/javaee"
xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" version="2.5">
<servlet>
		<servlet-name>AddPostController</servlet-name>
		<servlet-class>com.agourlay.pomf.controller.AddPostController</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>RemovePostController</servlet-name>
		<servlet-class>com.agourlay.pomf.controller.RemovePostController</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>UpdatePostController</servlet-name>
		<servlet-class>com.agourlay.pomf.controller.UpdatePostController</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>SetCaptchaNumberController</servlet-name>
		<servlet-class>com.agourlay.pomf.controller.SetCaptchaNumberController</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>GetPositionPostController</servlet-name>
		<servlet-class>com.agourlay.pomf.controller.GetPositionPostController</servlet-class>
	</servlet>
	
	
	<servlet-mapping>
		<servlet-name>AddPostController</servlet-name>
		<url-pattern>/new</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>RemovePostController</servlet-name>
		<url-pattern>/remove</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>UpdatePostController</servlet-name>
		<url-pattern>/update</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>SetCaptchaNumberController</servlet-name>
		<url-pattern>/getCaptchaNumber</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>GetPositionPostController</servlet-name>
		<url-pattern>/getPositionPost</url-pattern>
	</servlet-mapping>
	
	<welcome-file-list>
		<welcome-file>TheFridge.jsp</welcome-file>
	</welcome-file-list>
</web-app>
