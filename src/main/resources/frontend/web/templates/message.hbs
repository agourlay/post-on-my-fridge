{{#if view.content.isNotification}}
	<br/>
	<i>
		<span class='chat-content'>
			{{view.content.message}} at {{view.content.date}}
		</span>
	</i>
{{else}}
	<br/>
	<i>Sent at {{view.content.date}}</i>
	<br/>
	<span class='chat-content'>
		<b>{{view.content.user}} says : </b> {{view.content.message}}
	</span>
{{/if}}		