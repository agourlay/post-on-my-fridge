<div class='post-header'>
	<div class="btn-toolbar">
	    <div class="btn-group-sm">
	        <a class="btn btn-xs edit-post" {{action editMode target="view"}}>
	        	<i class="fa fa-edit"></i>
	        </a>
	        <a class="btn btn-xs trash-post" {{action trashPost target="view"}}>
	        	<i class="fa fa-trash-o"></i>
	        </a>
	        <a class="btn btn-xs" {{action voteUp target="view"}}>
	    		<i class="fa fa-thumbs-o-up"></i>
	    	</a>
	     	<a class="btn btn-xs" {{action voteDown target="view"}}>
	     		<i class="fa fa-thumbs-o-down"></i>
	     	</a>
	    </div>
	</div>
</div>	